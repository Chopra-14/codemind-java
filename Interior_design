import java.util.*;
import java.lang.*;
import java.io.*;
class Codechef {
	public static void main (String[] args) throws java.lang.Exception	{
	   Scanner read=new Scanner(System.in);
       int t=read.nextInt();
       for(int i=0;i<t;i++) {
           int a,b,c,d,e,f;
           a=read.nextInt();
           b=read.nextInt();
           c=read.nextInt();
           d=read.nextInt();
           e=a+b;
           f=c+d;
           if(e<f)
           System.out.println(e);
           else
           System.out.println(f);
       }
	}
}
